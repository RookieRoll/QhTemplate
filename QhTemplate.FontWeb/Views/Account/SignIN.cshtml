
<div class="modal fade" tabindex="-1" role="dialog" id="login">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="margin-top:80px;">
            <h3 style="text-align:center;">登录</h3>
            <form style="width:80%;margin:auto;">

                <div class="input-group" style="margin-top:20px;">
                    <span class="input-group-addon" id="basic-addon1" style="min-width: 85px;">学校名称</span>
                    <input type="text" class="form-control" placeholder="学校名称" aria-describedby="basic-addon1"
                           list="data" oninput="getData()" id="schoolname" required="required" autocomplete="off"/>
                </div>

                <div class="input-group" style="margin-top:20px;">
                    <span class="input-group-addon" id="basic-addon2" style="min-width: 85px;">用户名</span>
                    <input type="text" class="form-control" placeholder="用户名" aria-describedby="basic-addon2"
                           id="username" required="required" autocomplete="off">
                </div>
                <div class="input-group" style="margin-top:20px;">
                    <span class="input-group-addon" id="basic-addon3" style="min-width: 85px;">密码</span>
                    <input type="password" class="form-control" placeholder="密码" aria-describedby="basic-addon3" id="password" required="required">
                </div>


                <datalist id="data"></datalist>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="loginclose">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="sublogin()">登录</button>
                    <a href="/Account/Signup" >注册</a>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    $("#login").modal("show");


    function sublogin() {
        var schoolname = $("#schoolname").val();
        var username = $("#username").val();
        var password = $("#password").val();
        $.ajax({
            url: "/account/SignIn",
            type: "post",
            data: {
                schoolname: schoolname,
                username: username,
                password: password

            },
            success: function (data) {
                if (data === "ok") {
                    location.reload();
                }
                else {
                    alert(data);
                }

            }
        })

    }


</script>