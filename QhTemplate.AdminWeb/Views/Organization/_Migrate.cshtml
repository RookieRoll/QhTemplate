@model QhTemplate.AdminWeb.ViewModels.Organizations.OrganizationMigrateViewModel

@Html.HiddenFor(Model => Model.Id)
<div class="modal fade" id="my-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">迁移部门</h4>
            </div>
            @if (Model.ParentId != null && Model.ParentId > 0)
            {
                <div class="modal-body">
                    <h4>您确定要将<span class="title-highlight">@Model.Name</span>部门迁移到<span class="title-highlight">@Model.ParentName</span>部门吗？</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">取消</button>
                    <button type="button" class="btn btn-danger" id="submit">确定</button>
                </div>
            }
            else if (Model.ParentId < 0)
            {
                <div class="modal-body">
                    <h4><span class="title-highlight">@Model.ParentName</span>部门已存在<span class="title-highlight">@Model.Name</span>部门，无需迁移！</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="ok">确定</button>
                </div>
            }
            else
            {
                <div class="modal-body">
                    <h4>您确定要将<span class="title-highlight">@Model.Name</span>部门迁移成新的根部门吗？</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">取消</button>
                    <button type="button" class="btn btn-danger" id="submit">确定</button>
                </div>
            }
           
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    $("#my-modal").modal('show');
</script>