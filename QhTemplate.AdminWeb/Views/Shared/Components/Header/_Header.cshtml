@model QhTemplate.AdminWeb.ViewModels.Account.HeaderShowViewModel


<li class="dropdown user user-menu">
    <!-- Menu Toggle Button -->
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <!-- The user image in the navbar-->
        <img src="~/lib/AdminLte/img/user2-160x160.jpg" class="user-image" alt="User Image">
        <!-- hidden-xs hides the username on small devices so only the image appears. -->
        <span class="hidden-xs">@Model.Name</span>
    </a>
    <ul class="dropdown-menu" style="width:100px;">
        <li><a href="#">个人资料修改</a></li>
        <li role="separator" class="divider"></li>
        <li><a href="/Account/SignOut?url=@Model.Login" class="btn btn-default btn-flat">注销</a></li>
    </ul>
</li>