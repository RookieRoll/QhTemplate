@model QhTemplate.FontWeb.Models.BriefingContents.BriefingContentViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_MainLayout";
}


@await Component.InvokeAsync("ClassifiesMenuBar", new { type = 1, areaId = Model.AreaId })
<div class="main-content">
    <div style="position: absolute;top: 20px;z-index: 99999;left: 200px;">
        <span>重庆</span>
    </div>
    <div>
        <form asp-controller="BriefingContent" asp-action="index">
            <label>宣讲会查询系统</label>
            <input type="text" name="search" />
            <input type="date" name="time" />
            <button>搜索宣讲会</button>
        </form>
    </div>
    <table class="table" style="width: 98%;margin: auto;background-color: white;">
        <thead>
            <tr>
                <th>公司标题</th>
                <th>举办时间</th>
                <th>举办地点</th>
                <th>发布时间</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Result)
            {
                <tr>
                    <td>@item.Company</td>
                    <td>@item.StartTime</td>
                    <td>@item.Held</td>
                    <td>@item.PublishTime</td>
                </tr>
            }
        </tbody>
    </table>

</div>

