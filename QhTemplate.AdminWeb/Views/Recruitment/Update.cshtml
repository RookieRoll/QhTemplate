@model QhTemplate.AdminWeb.ViewModels.Recruitments.EditRecruitment
@{
    Layout = "_Layout";
    ViewBag.Title = "编辑";
}

@section Styles{
    <link href="~/lib/jstree/dist/themes/default/style.css" rel="stylesheet" />
    <link href="~/lib/ueditor/themes/default/css/ueditor.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/jstree/dist/themes/default/style.css" rel="stylesheet" />

    <link href="~/css/RecruitMent/create.css" rel="stylesheet" type="text/css" />
}

<section class="content-header">
    <h1>
        编辑招聘信息
        <small> @ViewData["Title"]</small>

    </h1>
</section>
<section class="content">
    <form>
        <input type="hidden" name="Id" id="reid" value="@Model.Id" />
        <div style="display:flex;">
            <div>
                <div>
                    <label>标题</label>
                    <div>
                        <input type="text" name="title" id="title" value="@Model.Title" />
                    </div>
                </div>
                <div class="content-box">
                    <label>内容</label>
                    <div>
                        @Html.TextAreaFor(m => m.Content, new { @id = "contentbox" })
                    </div>
                </div>
                <div style="margin-top:20px;">
                    <label>
                        结束时间<input type="date" id="endtime" name="endtime" value="@Model.EndTime" style="margin-left:20px;" />
                    </label>
                </div>
                <div style="display: flex; justify-content: flex-start; margin-top: 20px;">
                    <div>
                        <label>专业类型</label>
                        <div id="major" style="width: 890px; display: flex; justify-content: flex-start;">
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div>工作地域：</div>
                <div id="jstree">

                </div>
            </div>
        </div>
        <div style="overflow: hidden;" class="sub-button">
            <button type="button" class="btn btn-default commitbutton" onclick="createArticle()">保存</button>
        </div>
    </form>
</section>
<script type="text/javascript" charset="utf-8" src="~/lib/ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="~/lib/ueditor/ueditor.all.min.js"></script>
<script type="text/javascript" charset="utf-8" src="~/lib/ueditor/lang/zh-cn/zh-cn.js"></script>
<script src="~/lib/jstree/dist/jstree.js"></script>
<script type="text/javascript" charset="utf-8" src="~/js/RecruitMent/update.js"></script>
<script>

</script>
